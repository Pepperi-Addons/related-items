{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "rootDir": "..",
    "outDir": "build",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2020.Promise"
    ]
  },
  "exclude": [
    "./build/**",
    "./dest/**"
  ]
}
